{
  "index_patterns": ["fluentd.gooid-web_app_gbss_error_spring_log-*"],
  "priority": 0,
  "composed_of": [
    "index-common-settings"
  ],
  "template": {
    "mappings": {
      "properties": {
        "@timestamp":   { "type": "date" },
        "server":		    { "type": "keyword" },
        "log-time": 	  { 
          "type": "date",
          "format": "yyyy/MM/dd HH:mm:ss.SSS"
        },
        "priority": 		{ "type": "keyword" },       
        "sourceip": 		{
                          "ignore_malformed": true, 
                          "type": "ip" 
                        },
        "sessionid": 	    { 
          "type":   "text",
          "fields": {
            "raw":  {
              "type": "keyword"
            }
          }
        },
        "userid": 	    { 
          "type":   "text",
          "fields": {
            "raw":  {
              "type": "keyword"
            }
          }
        },
        "message": 		  { "type": "text" }
      }
    }
  }
}
