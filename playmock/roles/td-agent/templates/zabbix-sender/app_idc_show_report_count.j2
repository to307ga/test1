<worker {{td_agent_worker3}}>
  <source>
    @type tail
    path /db0/tdlogs/merged/gooid-{{ project_id_number_env }}-hlp/var.log.app.idc/show_report.%Y-%m-%d.log
    pos_file /var/log/td-agent/app_idc_show_report_count.pos
    pos_file_compaction_interval 240h 
    rotate_wait 60
    tag gooid-hlp_app_idc_show_report_log
    <parse>
      @type regexp
      time_format %Y/%m/%d %H:%M:%S.%L
      # マージログはホスト名がついたりしているのでパース用のexpressionはそのまま使えないので修正が必要 (?<server>[^ ]*)  を先頭に付ければOK
      # expression /(?<server>[^ ]*) (?<parsed_log>(?<log-time>\d{4}/\d{1,2}/\d{1,2} \d{1,2}:\d{1,2}:\d{1,2}.\d{3}),(?<level>[A-Z]{1,20}),(?<msgID>[A-Z0-9]{1,20}),\[\[(?<msglevel>.*)\]\](?<msg>.+))/
      expression /(?<server>[^ ]*) (?<log-time>\d{4}/\d{1,2}/\d{1,2} \d{1,2}:\d{1,2}:\d{1,2}.\d{3}),(?<level>[A-Z]{1,20}),(?<msgID>[A-Z0-9]{1,20}),\[\[(?<msglevel>.*)\]\](?<msg>.+)/
      # keep_time_key true
    </parse>
  </source>

  <match gooid-hlp_app_idc_show_report_log.**>
    @type copy
    {#
    <store>
      @type         datacounter         
      count_interval 5m 
      aggregate all
      count_key msglevel
      # patternX: X(1-20)
      pattern1 to_zabbix.error.gooid.hlp.idc.show_report ^E
      tag count.gooid-hlp_app_idc_show_report_log.msglevel.*
    </store>
    #}
    <store>
      @type 	              elasticsearch
      scheme	              https
      ssl_version           {{ elasticsearch.ssl_version }}
      # Copy from /etc/elasticsearch/certs/http_ca.crt on the els server
      ca_file               {{ elasticsearch.ca_file }}
      # host 	                {{ elasticsearch.hostname }}
      # hosts https://customhost.com:443/path,https://username:password@host-failover.com:443
      # port 9200
      hosts                 {{ elasticsearch.hosts }}
      user                  {{ elasticsearch.user }}
      password              {{ elasticsearch.pwd }}
      # Does not work with elasticsearch_dynamic
      # index_name            fluentd.${tag}-%Y%m%d
      logstash_format       true
      include_timestamp     true
      logstash_prefix       fluentd.${tag}
      logstash_dateformat   %Y%m%d
      time_key_format %Y-%m-%dT%H:%M:%S.%N%z
      # include_tag_key       true
      with_transporter_log  true
      @log_level             {{ plugin_log_level.elasticsearch }}
      # utc_index             false
      # time_key created_at
      # time_key_format %a %b %d %H:%M:%S %z %Y
      <buffer tag,time>
        timekey         1d
        # flush_interval  1m
      </buffer>
      flush_interval  1m
    </store> 
  </match>  

  {#
  <match count.gooid-hlp_app_idc_show_report_log.msglevel.*>
    @type               file
    append              true
    # The filename of the path should be the same as the filename of this file.
    path /db0/tdlogs/zabbix-sender-count/app_idc_show_report_count
    time_slice_format   %Y-%m-%d
    <buffer time>
      @type memory
      timekey             1d
      timekey_wait        0s
      flush_mode          immediate
      flush_at_shutdown   true
    </buffer>
  </match>
  #}
</worker>
