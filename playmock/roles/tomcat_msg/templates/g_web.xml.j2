<Context path="/g_web" reloadable="false" workDir="/usr/local/tomcat/work/Catalina/localhost/g_web">
    <Resource
        name="SelectDB"
        auth="Container"
        type="javax.sql.DataSource"
        username="{{ mysql_reader_name }}"
        password="{{ mysql_reader_password }}"
        driverClassName="org.mariadb.jdbc.Driver"
        url="jdbc:mariadb://127.0.0.1:6033/PDB02?autoReconnect=true"
        maxTotal="250"
        maxWaitMillis="10000"
        maxIdle="250"
        removeAbandonedOnBorrow="true"
        removeAbandonedTimeout="300"
        validationQuery="select 1"
    />
    <Resource
        name="UpdateDB"
        auth="Container"
        type="javax.sql.DataSource"
        username="{{ mysql_writer_name }}"
        password="{{ mysql_writer_password }}"
        driverClassName="org.mariadb.jdbc.Driver"
        url="jdbc:mariadb://127.0.0.1:6034/PDB02?autoReconnect=true"
        maxTotal="250"
        maxWaitMillis="10000"
        maxIdle="250"
        removeAbandonedOnBorrow="true"
        removeAbandonedTimeout="300"
        validationQuery="select 1"
    />
    <Resource
        name="SessionDB"
        auth="Container"
        type="javax.sql.DataSource"
        username="{{ mysql_admin_name }}"
        password="{{ mysql_admin_password }}"
        driverClassName="org.mariadb.jdbc.Driver"
        url="jdbc:mariadb://127.0.0.1:6034/PDB02?autoReconnect=true"
        maxTotal="250"
        maxWaitMillis="10000"
        maxIdle="250"
        removeAbandonedOnBorrow="true"
        removeAbandonedTimeout="300"
        validationQuery="select 1"
    />
    <Resource
        name="SelectDBforB"
        auth="Container"
        type="javax.sql.DataSource"
        username="{{ mysql_reader_name }}"
        password="{{ mysql_reader_password }}"
        driverClassName="org.mariadb.jdbc.Driver"
        url="jdbc:mariadb://127.0.0.1:6033/PDB02?autoReconnect=true"
        maxTotal="250"
        maxWaitMillis="10000"
        maxIdle="250"
        removeAbandonedOnBorrow="true"
        removeAbandonedTimeout="300"
        validationQuery="select 1"
    />
</Context>
